@model ArticleView
<a class="article-titre" href="@Model.AxeCss/@(Model.UrlComplete)"><h1>@Model.Titre</h1></a>
@if (Model.HasSousTitre) {
<a class="article-sousTitre" href="@Model.AxeCss/Model.Url)">@Model.SousTitre</a>
}
<div class="article-info">
    <span class="icon-calendar"></span><span class="article-date u-mlxs">@Model.DateAffichage</span>
    @if (Model.HasVille) {
    <span class="icon-location u-mlm"></span><span class="article-ville u-mlxs">@Model.Ville @if (Model.HasDepartement) { <text>(</text> @Model.Departement <text>)</text> } </span>
    }
    @if (Model.HasPhotos) {
    <span class="icon-image u-mlm"></span><span class="u-mlxs">@Model.Photos.Count photos</span>
    }
</div>