@model Article

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Article</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="@Model.Id" />

        <div class="form-group">
            <label asp-for="Axe" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Axe" class="form-control" />
                <span asp-validation-for="Axe" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Titre" class="col-md-2 control-label"></label>
