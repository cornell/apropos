@model ArticleView

@if(Model.HasTarifUnique) {
<div class="inscriptionTarif">    
    <h2>Inscriptions et tarifs</h2>
    <p>Réservez dès aujourd'hui votre place en envoyant un mail à contact.apropos@gmail.com. Vous recevrez les documents nécessaires à votre inscription définitive.</p>

    <p>Tarif unique: @Model.TarifUnique €</p>
</div>
}
@if(Model.AfficherInscriptionEtTarif) { 
<div class="inscriptionTarif">
    <h2>Inscription et tarifs</h2>
    <p>Veuillez nous retourner le contrat ou la convention correspondant à votre situation, signé, accompagné du chèque de réservation et de l’enveloppe timbrée à votre nom et adresse (seuls les dossiers complets seront retenus)</p>
    @if (Model.HasFinancementDpc) {
    <h3>DPC</h3>
    <div class="articleDetail-inscription">
        la formation est gratuite et indemnisée<br>
        Inscrivez-vous sur le site <a href="https://www.mondpc.fr/">www.mondpc.fr</a><br>
        N° de référence du programme : @Model.OgdpcReference<br>
        <a href="@Model.GetCheminRelatifDocument("contrat-formation-dpc.pdf")"><span class="icon-pdf"></span><span class="pdf-descriptionFichier">contrat de formation DPC</span></a>
    </div>
    }
    @if (Model.HasFinancementHorsDpc) {
    <h3>Hors DPC</h3>
    <div class="articleDetail-inscription">
        Tarif adhérent: @Model.TarifAdherentLiberal €<br>
        Tarif non adhérent: @Model.TarifNonAdherentLiberal €<br>
        <a href="@Model.GetCheminRelatifDocument("contrat-formation-hors-dpc.pdf")"><span class="icon-pdf"></span><span class="pdf-descriptionFichier">contrat de formation hors DPC</span></a>
    </div>
    }
    @if (Model.HasFinancementSalarie) {
    <h3>Salarié</h3>
    <div class="articleDetail-inscription">
        Tarif adhérent: @Model.TarifAdherentSalarie €<br>
        Tarif non adhérent: @Model.TarifNonAdherentSalarie €<br>
        <a href="@Model.GetCheminRelatifDocument("contrat-formation-salarie.pdf")"><span class="icon-pdf"></span><span class="pdf-descriptionFichier">contrat de formation salarié</span></a>
    </div>
    }
</div> 
}